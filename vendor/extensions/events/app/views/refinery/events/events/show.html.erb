<% content_for :body_content_title do %>
  <%= @event.name %>
<% end %>

<% content_for :body do %>
<div class="show-event">
  <div class="image"><%= image_tag @event.image.url if @event.image %></div>
  <div class="name"><%= @event.name %> </div>
  <%= @event.info %>
  <div class="dates">
    <% @event.times.group_by{|t| t.time.to_date}.each do |date, times| %>
      <strong><%= l(date) %>:</strong> <br />
      <div class="hours"><%= times.map{|time| time.time.strftime("%H:%m")}.join(", ") %></div>
      <br />
    <% end %>
  </div>
  <div class="description">
    <%= raw @event.description %>
  </div>

  <ul id='gallery'>
    <% @event.images.each do |i| %>
      <li>
        <%= link_to image_tag(i.thumbnail("200x200#c").url), i.thumbnail("900x600").url, class: :fresco, data: {'fresco-group' => 'group'}  %>
      </li>
   <% end %>
  </ul>
</div>
<% end %>

<% content_for :side_body do %>
  <%= render 'promoted' %>
  <%= render 'see' %>
  <%= render 'calendar' %>
<% end %>

<%= render '/refinery/content_page' %>
