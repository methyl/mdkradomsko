<% content_for :body_content_title do %>
  <%= @event.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @event.name %>
    </p>
  </section>
  <section>
    <h1>Info</h1>
    <p>
      <%=raw @event.info %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @event.description %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @event.date %>
    </p>
  </section>
  <section>
    <h1>Hours</h1>
    <p>
      <%=raw @event.hours %>
    </p>
  </section>
  <section>
    <h1>Type</h1>
    <p>
      <%=raw @event.type_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @events.each do |event| %>
        <li>
          <%= link_to event.name, refinery.events_event_path(event) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
