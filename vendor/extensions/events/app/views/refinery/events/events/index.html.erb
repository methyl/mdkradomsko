<% content_for :body_content_title, @page_title %>
<% content_for :body do %>
  <section id="news" class="cinema">
    <% @events.each do |event| %>
      <section class="news">
        <div class="box-news event">
          <table>
            <tr>
              <td class="name">
                <h6><%= event.name %></h6>
                <div class="dates">
                  <% event.times.group_by{|t| t.time.to_date}.each do |date, times| %>
                    <strong><%= l(date) %>:</strong> <br />
                    <div class="hours"><%= times.map{|time| time.time.strftime("%H:%M")}.join(", ") %></div>
                    <br />
                  <% end %>
                </div>
                <div class="info"><%= event.info %></div>
              </td>
              <td class="image"><%= image_tag event.images.first.thumbnail("x200").url unless event.images.empty? %></td>
            </tr>
            <tr>
              <td><%= link_to t('news.more'), refinery.events_event_path(event) %></td>
            </tr>
          </table>
        </div>
      </section>
    <% end %>
  </section>
<% end %>

<% content_for :side_body do %>
  <%= render 'promoted' %>
  <%= render 'see' %>
  <%= render 'calendar' %>
<% end %>

<%= render '/refinery/content_page' %>
