<% content_for :body_content_title, @page_title %>
<% content_for :body do %>
  <section id="news" class="cinema">
    <% @events.each do |event| %>
      <section class="news">
        <div class="box-news event">
          <table>
            <tr>
              <td class="name">
                <h6><%= event.type.name %>:<br /> <%= event.name %></h6>
                <%= event.info %>
                <%= link_to t('news.more'), refinery.events_event_path(event) %>
              </td>
              <td class="image"><%= image_tag event.image.url if event.image %></td>
            </tr>
          </table>
        </div>
      </section>
    <% end %>
  </section>
<% end %>

<% content_for :side_body do %>
  <%= render 'promoted' %>
  <%= render 'see' %>
  <%= render 'calendar' %>
<% end %>

<%= render '/refinery/content_page' %>
