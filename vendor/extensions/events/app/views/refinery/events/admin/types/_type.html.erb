<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(type) -%>">
  <span class='title'>
    <%= type.name %>

    <% if Refinery.i18n_enabled? and Refinery::I18n.frontend_locales.many? %>
      <span class='preview'>
        <% type.translations.each do |translation| %>
          <% if translation.name.present? %>
            <%= link_to refinery_icon_tag("flags/#{translation.locale}.png", :size => '16x11'),
                         refinery.edit_events_admin_type_path(type, :switch_locale => translation.locale),
                         :class => 'locale' %>
          <% end %>
        <% end %>
      </span>
    <% end %>

  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_events_admin_type_path(type),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.events_admin_type_path(type),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => type.name),
        :method => :delete %>
  </span>
</li>
