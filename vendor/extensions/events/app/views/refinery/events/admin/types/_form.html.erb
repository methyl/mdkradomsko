<%= form_for [refinery, :events_admin, @type] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @type,
              :include_object_name => true %>

  <%= render "locale_picker",
              :current_locale => Thread.current[:globalize_locale] if Refinery.i18n_enabled? %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.types.admin.types.type'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @type.name) %>
<% end -%>
