<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(time) -%>">

  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.events_time_path(time),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_events_admin_time_path(time),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.events_admin_time_path(time),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete'),
        :method => :delete %>
  </span>
</li>
