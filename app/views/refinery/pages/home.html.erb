<div class="container top">
    <section id="top-news">
      <div class="shadow-top"></div>
      <div class="fotos-topnews">
        <%= image_tag 'page-images/news-foto.jpg', size: '949x346'  %>
      </div>
      <div class="content-news">
        <div class="content">
          <h2><%= @latest_news.title %></h2>
          <p>
            <%= raw strip_tags(@latest_news.body).truncate(500) %>
          </p>
        </div>
        <a href="<%= refinery.news_item_path(@latest_news) %>" class="more shadow"><%= t('news.more') %></a>
      </div>
    </section> 
   </div>
   <div class="container">
    <div id="col-center">
    
      <section id="events">
        <h2>WYDARZYŁO SIĘ</h2>
        <div class="key-events">
          <ul>
            <% @elapsed_events.each_with_index do |event, i| %>
              <li><a title="<%= event.name %>" href="<%= events_event_path(event) %>"><%= i+1 %>. <%= event.name %></a></li>
            <% end %>
          </ul>
        </div>
         <%= link_to 'Zobacz wszystkie', '/events/wydarzy%C5%82o%20si%C4%99', :class => [:more, :shadow] %>
      </section>

      <section id="news">
        <%= render @news %>
        <div class="all-news"><a href="<%= refinery.news_items_path %>" class="more shadow"><%= t('news.see_all') %></a></div>
      </section>

    </div>
    <div id="col-right">
      <%= render '/refinery/events/events/promoted' %>
      
      <section id="today">
        <h2>Dzisiaj</h2>
        <%= link_to 'Zobacz wszystkie', events_events_path, :class => [:more, :shadow] %>
        <ul id="today-see">
          <%= render :partial => '/refinery/events/events/side_event', :collection => @side_events %>
        </ul>
      </section>

      <section style="text-align: center">
        <a href="/events/wydarzyło się/archive" class="more shadow" style="float: none">Archiwum</a>
      </section>

      <section class="rozewicz">
        <a href="http://www.rozewiczopen.pl"><img src="/assets/rozewicz.png" /></a>
      </section>
      
      <aside id="newsletter">
        <h5>Newsletter</h5>
        <p>
          Chcesz otrzymywać najnowsze informacje z naszego domu kultury? Wpisz Twój e-mail i kliknij „Zapisz”.
        </p>
        <form class="newsletter" method="post" action="http://mdkradomsko.us7.list-manage.com/subscribe/post?u=eb3ba5173094540b1befa8682&amp;id=ec13344b1d">
          <section>
            <input type="text" id="email" name="EMAIL" placeholder="Adres email" /> 
            <input type="submit" id="zapisz" value="Zapisz" name="subscribe" class="button newsletter" />
          </section>
        </form>
      </aside>
      
      
<!--         <div class="box-calendar">
          <a href="#"><%= image_tag 'kalendarium.jpg', size: '348x208', alt: 'Kalendarium imprez MDK' %></a>
        </div> -->
        <%= render :partial => '/refinery/events/events/calendar' %>
      </aside>
      
    </div>
  </div>


