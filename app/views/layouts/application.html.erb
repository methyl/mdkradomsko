<!doctype html>
<html>
<%= render 'refinery/head' %>

<body>
<!--panele-->  
<aside id="sidebar">
  <aside id="facebook">
    <a href="#" class="fb"></a>
  </aside>
  <aside id="twitter">
    <a href="#" class="twitter"></a>
  </aside>
  <aside id="youtube">
    <a href="#" class="youtube"></a>
  </aside>
  <aside id="bip">
    <a href="#" class="bip"></a>
  </aside>
  <aside id="projekty">
    <a href="#" class="projects"></a>
  </aside>
</aside>

<!--HEADER-->  
<header>
  <div class="container">
    <div id="top">
      <h1><a href="/" title="MIEJSKI DOM KULTURY W RADOMSKU">MDK</a></h1>
      <aside id="slogan">
        <h6>z pasją dla kultury - kultura z pasją</h6>
        <h4>MIEJSKI DOM KULTURY W RADOMSKU</h4>
      </aside>
    </div>
    <%= render :partial => "/refinery/menu" %>
  </div>
</header>

<!--CONTENT-->  
<div id="content">
  <%= yield %>
</div>

<!--Advertisement-->  
<aside id="advertisement">
  <h2 class="hide">Reklama</h2>
  <div class="button-advertisement">
    <a href="#" class="advertisement"></a>
  </div>
</aside>

<!--FOOTER-->  
<footer>
  <aside>
    <div class="container">
      <p class="title">Partnerzy i sponsorzy:</p>
      <div class="box-partners_sponsors">
        <div class="marquee">
          <% 7.times do |i| %>
            <%= image_tag "partner#{i+1}.jpg" %> 
          <% end %>
        </div>
      </div> 
    </div>   
    
  </aside>
  <div class="container">
    <section id="footer">
      <div class="copy-realization">
        <p class="copy">
          Copyrights 2013 by Miejski Dom Kultury w Radomsku. All Rights Reserved.</p>
        <p class="realization">Projekt i Realziacja: <a href="http://kampanieSEO.pl">KampanieSEO.pl</a></p>
      </div>
    </section>
  </div>
</footer>

